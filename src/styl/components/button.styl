
/*––––––––––––––––––––  Buttons  –––––––––––––––––––––––––––––– */
button, .bonsai-button
  background-color var(--highlight)
  border 2px solid var(--highlight)
  border-radius 4px
  box-sizing border-box
  color var(--white)
  cursor pointer
  display inline-block
  font-size 0.88rem
  font-weight 500
  letter-spacing 0.1rem
  line-height 1em
  margin 0.5rem
  padding 0.75rem 1.5rem
  text-align center
  text-decoration none
  white-space nowrap
  transition all 0.3s
  &:hover
  &:focus
    background var(--highlight-dn1)
    outline 0
  &:active
    background var(--highlight-up1)
  &.ghost
    color var(--highlight)
    border 2px solid var(--highlight)
    background-color transparent
    &:hover
      background-color var(--highlight-dn1)
      border 2px solid var(--highlight-dn1)
      color var(--white)
    &:active
      background var(--highlight-up1)
    &.borderless
      border none
  &.subtle
    background-color transparent
    border 2px solid var(--gray-4)
    color var(--gray-5)
    &:hover
      background-color var(--gray-5)
      border 2px solid var(--gray-5)
      color var(--white)
    &:active
      background var(--gray-3)
      border 2px solid var(--gray-3)
    &.borderless
      border none
  &.block
    display block
    width 100%
